@model GestorActividades.Models.Actividad

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalles de la actividad</h1>

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Detalles</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Titulo)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-9">
                @Model.Fecha.ToString("dd/MM/yyyy")
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Ubicacion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Ubicacion)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                Organizador
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Organizador.Nombre)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.ActividadID" class="btn btn-primary mx-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary mx-2">Volver a la lista</a>
    <form asp-action="Delete" asp-route-id="@Model?.ActividadID" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger mx-2" onclick="return confirm('¿Seguro que quiere eliminar esta actividad?');">Borrar</button>
    </form>
    </div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
