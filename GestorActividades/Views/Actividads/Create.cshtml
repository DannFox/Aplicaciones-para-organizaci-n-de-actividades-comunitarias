@model GestorActividades.Models.Actividad

@{
    ViewData["Title"] = "Crear Nueva Actividad";
}

<h1 class="text-center my-4">Crear Nueva Actividad</h1>

<h4 class="text-muted">Por favor, completa los detalles de la actividad</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label font-weight-bold"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Ingresa el título de la actividad" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label font-weight-bold"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Descripción breve de la actividad" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label font-weight-bold"></label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label font-weight-bold"></label>
                <input asp-for="Ubicacion" class="form-control" placeholder="Lugar donde se realizará" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Organizador" class="control-label font-weight-bold"></label>
                <select asp-for="OrganizadorID" class="form-control" asp-items="ViewBag.OrganizadorID">
                    <option value="">Selecciona un organizador</option>
                </select>
                <span asp-validation-for="OrganizadorID" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Crear Actividad" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver al listado</a>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
