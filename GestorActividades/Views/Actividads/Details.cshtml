@model GestorActividades.Models.Actividad

@{
    ViewData["Title"] = "Detalles de la Actividad";
}

<h1>Detalles de la Actividad</h1>

<div>
    <h4>Actividad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFormateada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFormateada)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ubicacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ubicacion)
        </dd>

        <dt class="col-sm-2">
            Organizador
        </dt>
        <dd class="col-sm-10">
            @Model.Organizador.Nombre
        </dd>
    </dl>
</div>

<hr />

<h3>Participantes Registrados</h3>
<div>
    <a asp-action="AddParticipantes" asp-route-id="@Model.ActividadID" class="btn btn-primary mb-3">
        Agregar Participantes
    </a>
</div>

@if (Model.Participantes != null && Model.Participantes.Any())
{
    <ul>
        @foreach (var participante in Model.Participantes)
        {
            <li>@participante.Nombre</li>
        }
    </ul>
}
else
{
    <p>No hay participantes registrados en esta actividad.</p>
}


<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.ActividadID" class="btn btn-primary">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.ActividadID" class="btn btn-warning">Borrar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
