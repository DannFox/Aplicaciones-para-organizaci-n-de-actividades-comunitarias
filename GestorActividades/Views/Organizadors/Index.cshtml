@model IEnumerable<GestorActividades.Models.Organizador>

@{
    ViewData["Title"] = "Organizadores";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Lista de Organizadores</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Organizador</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center" style="width: 250px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Acciones">
                                <a class="btn btn-warning btn-sm me-2" asp-action="Edit" asp-route-id="@item.OrganizadorID">Editar</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.OrganizadorID">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No hay organizadores disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
